@model SinemaSite.Models.SalonAddingModel
@{
    Layout = "_LayoutAdmin";
    ViewBag.Title = "Salon Ekle";
    var user = Context.Items["CurrentUser"] as Kullanici;
    var sinemalar = ViewBag.Sinemalar as IEnumerable<SinemaSite.Models.Sinema>;
};
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Profil</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">
                            <ul class="nav nav-pills">
                                <li class="nav-item"><a class="nav-link active" href="#add_salon" data-toggle="tab">Salon Ekle</a></li>
                            </ul>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <div class="tab-content">
                                <div class="active tab-pane" id="add_salon">
                                    <div class="col-md-15">
                                        <div class="card">
                                            <!-- /.card-body -->
                                            <form method="post" asp-action="AddSalon">
                                                <br />
                                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                                @if (ViewBag.Error != null)
                                                {
                                                    <div id="error-message" value="@ViewBag.Error"></div>
                                                    <div class="form-group" style="color: red;">@ViewBag.Error</div>
                                                }
                                                @if (ViewBag.Success != null)
                                                {
                                                    <div id="success-message" value="@ViewBag.Success"></div>
                                                    <ul>
                                                        <div class="form-group" style="color: green;"> @ViewBag.Success</div>
                                                    </ul>
                                                }
                                                <div class="col-lg-auto">
                                                    <div class="form-group row">
                                                        <label class="col-md-2 col-form-label">Salon Numarası:</label>
                                                        <div class="col-md-10">
                                                            <input asp-for="SalonNumarasi" type="number" id="salon_numarası" class="form-control">
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-lg-auto">
                                                    <div class="form-group row">
                                                        <label class="col-md-2 col-form-label">Satır Sayısı:</label>
                                                        <div class="col-md-10">
                                                            <input asp-for="Satir" type="number" id="satir_sayisi" class="form-control">
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-lg-auto">
                                                    <div class="form-group row">
                                                        <label class="col-md-2 col-form-label">Sütun Sayısı:</label>
                                                        <div class="col-md-10">
                                                            <input asp-for="Sutun" type="number" id="sutun_sayisi" class="form-control">
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-lg-auto">
                                                    <div class="form-group row">
                                                        <label class="col-md-2 col-form-label">Salon Tipi:</label>
                                                        <select asp-for="SalonTipi" class="form-select form-select-lg mb-2" aria-label=".form-select-lg example">
                                                            <option value="0">Standart</option>
                                                            <option value="1">IMAX</option>
                                                            <option value="2">4DX</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-lg-auto">
                                                    <div class="form-group row">
                                                        <label class="col-sm-2 col-form-label">Sinema Seçiniz:</label>
                                                        <select asp-for="SinemaId" class="form-select form-select-lg mb-2" aria-label=".form-select-lg example">
                                                            @if (sinemalar is not null)
                                                            {
                                                                @foreach (var sinema in sinemalar)
                                                                {
                                                                    <option value="@sinema.Id">@sinema.Isim</option>
                                                                }
                                                            };
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-lg-auto">
                                                    <div class="form-group row">
                                                        <div class="col-sm-10">
                                                            <button type="submit" class="btn btn-success">Salon Ekle</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                        <!-- /.card -->
                                    </div>

                                </div>
                                <!-- /.tab-pane -->
                            </div>
                            <!-- /.tab-content -->
                        </div><!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
</div>