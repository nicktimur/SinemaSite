@{
    Layout = "_LayoutAdmin";
    ViewBag.Title = "Sinema Ekle";
    var user = Context.Items["CurrentUser"] as Kullanici;
}
@model SinemaAddingModel;
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Profil</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">
                            <ul class="nav nav-pills">
                                <li class="nav-item"><a class="nav-link active" href="#add_sinema" data-toggle="tab">Sinema Ekle</a></li>
                            </ul>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <div class="tab-content">
                                <div class="active tab-pane" id="add_sinema">
                                    <div class="col-md-15">
                                        <div class="card">
                                            <!-- /.card-body -->
                                            <form method="post" asp-action="AddSinema">
                                                <br />
                                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                                @if (ViewBag.Error != null)
                                                {
                                                    <div id="error-message" value="@ViewBag.Error"></div>
                                                    <div class="form-group" style="color: red;">@ViewBag.Error</div>
                                                }
                                                @if (ViewBag.Success != null)
                                                {
                                                    <div id="success-message" value="@ViewBag.Success"></div>
                                                    <ul>
                                                        <div class="form-group" style="color: green;"> @ViewBag.Success</div>
                                                    </ul>
                                                }
                                                <div class="col-lg-auto">
                                                    <div class="form-group row">
                                                        <label class="col-md-1 col-form-label">Sinema Adı:</label>
                                                        <div class="col-md-11">
                                                            <input asp-for="SinemaAdi" type="text" id="sinema_adi" class="form-control" >
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-lg-auto">
                                                    <div class="form-group row">
                                                        <label class="col-md-1 col-form-label">Sinema Adresi:</label>
                                                        <div class="col-md-11">
                                                            <input asp-for="SinemaAdresi" type="text" id="sinema_adi" class="form-control">
                                                        </div>
                                                    </div>
                                                </div>
                                                <hr>
                                                <div class="col-lg-auto">
                                                    <div class="form-group row">
                                                        <div class="col-sm-10">
                                                            <button type="submit" class="btn btn-success">Sinema Ekle</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                        <!-- /.card -->
                                    </div>

                                </div>
                                <!-- /.tab-pane -->
                            </div>
                            <!-- /.tab-content -->
                        </div><!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
</div>