@{
    ViewData["Title"] = "Bilet Al";
    var gosterim = Newtonsoft.Json.JsonConvert.DeserializeObject<dynamic>(ViewBag.Gosterim);
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Bilet Satın Al</h1>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                @if (gosterim != null)
                {
                    <div class="col-md-4">
                        <div class="film-card">
                            <img src="@gosterim.Film.ResimYolu" class="film-image" alt="@gosterim.Film.Isim">
                        </div>
                    </div>
                    <div class="col-md-8">
                        <!-- Film Bilgileri -->
                        <div class="film-details-card">
                            <div class="film-details-body">
                                <h5 class="film-title">@gosterim.Film.Isim</h5>
                                <p class="film-info">
                                    <strong>Türler:</strong>
                                @foreach(var tur in gosterim.Film.Turler){
                                    <a>@tur, </a>
                                }
                                </p>
                                <p class="film-info">
                                    <strong>Sinema:</strong> @gosterim.Salon.Sinema.Isim
                                </p>
                                <p class="film-info">
                                    <strong>Yayın Tarihi:</strong> @gosterim.Film.VizyonTarihi
                                </p>
                                <p class="film-info">
                                    <strong>Gösterim Tarihi:</strong> @gosterim.SunumTarihi
                                </p>
                                <p class="film-info">
                                    <strong>Gösterim Saati:</strong> @gosterim.SunumSaati
                                </p>
                                <p class="film-info">
                                    <strong>Salon Numarası:</strong> @gosterim.Salon.SalonNumarasi
                                </p>
                                <p class="film-info">
                                    <strong>Salon Tipi:</strong>
                                    @{
                                        var salonTipi = gosterim.Salon.SalonTipi;
                                    }

                                    @if (salonTipi == 0)
                                    {
                                        <span>Varsayılan</span>
                                    }
                                    else if (salonTipi == 1)
                                    {
                                        <img src="/img/icons/IMAX.png" alt="IMAX Logo" />
                                    }
                                    else if (salonTipi == 2)
                                    {
                                        <img src="/img/icons/4DX.png" alt="4DX Logo" />
                                    }
                                    else
                                    {
                                        <span>Bilgi Yok</span>
                                    }
                                </p>
                                <p class="film-info">
                                    <strong>Bilet Ücreti:</strong> @gosterim.Ucret TL
                                </p>
                                <p>
                                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#purchaseModal">
                                        Satın Al
                                    </button>
                                </p>
                                <!-- Modal -->
                                <div class="modal fade" id="purchaseModal" tabindex="-1" aria-labelledby="purchaseModalLabel" aria-hidden="true">
                                    <div class="modal-dialog modal-lg">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="purchaseModalLabel">Bilet Satın Al</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">


                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                                                <button type="button" class="btn btn-primary" id="confirm-button">Satın Al</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <p>Film bilgisi bulunamadı.</p>
                }
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>

<style>
    .film-card {
        border: 1px solid #ddd;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .film-image {
        width: 100%;
        height: auto;
        display: block;
    }

    .film-details-card {
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
        background-color: #fff;
    }

    .film-details-body {
        color: #333;
    }

    .film-title {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 15px;
    }

    .film-info {
        font-size: 16px;
        margin-bottom: 10px;
    }

        .film-info strong {
            color: #555;
        }

    .content-wrapper {
        padding: 20px;
    }

</style>

